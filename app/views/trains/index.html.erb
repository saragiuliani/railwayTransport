<h1>Listing trains</h1>

<table>
  <tr>
    <th>Serial number</th>
    <th>Model</th>
    <th>Firstclass seats</th>
    <th>Secondclass seats</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trains.each do |train| %>
  <tr>
    <td><%= train.serial_number %></td>
    <td><%= train.model %></td>
    <td><%= train.firstclass_seats %></td>
    <td><%= train.secondclass_seats %></td>
    <td><%= link_to 'Show', train %></td>
    <td><%= link_to 'Edit', edit_train_path(train) %></td>
    <td><%= link_to 'Destroy', train, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

